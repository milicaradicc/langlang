<Window x:Class="LangLang.Views.StudentViews.DropOutModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LangLang.Views.StudentViews"
        mc:Ignorable="d"
        Title="DropOutModal" Height="250" Width="300" 
        WindowStartupLocation="CenterScreen"
        Background="#bbe5e4">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Enter a reason for dropping out" Margin="0 10 0 10" />
        <TextBox Grid.Row="1" x:Name="ResponseTextBox" Margin="0 0 0 10" Width="250" Height="100" />
        <Button Background="White" Width="50" Grid.Row="2" Content="OK" Click="OKButton_Click" />
        
    </Grid>
</Window>
